<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear4barprofile"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/linearbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="?attr/colorPrimary"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="124dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/logoparty" />

                </LinearLayout>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/backarrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/backbuttonedit"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">


                    </RelativeLayout>
                    />

                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"

                android:fontFamily="@font/anakotmai_light"
                android:text="แก้ไขโปรไฟล์"
                android:id="@+id/createaccount"
                android:textColor="@color/Grey"
                android:textSize="28dp" />
            <LinearLayout
                android:layout_width="330dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/linear1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/createaccount"
                android:background="@drawable/imputtextbox"
                android:layout_height="47dp">
                <ImageView
                    android:layout_marginTop="1dp"
                    android:layout_width="30dp"
                    android:paddingLeft="9dp"
                    android:layout_marginLeft="17dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user"/>
                <EditText
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="8dp"
                    android:inputType="text"
                    android:layout_marginRight="20dp"
                    android:hint="ชื่อ"
                    android:id="@+id/nameinputedit"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:fontFamily="@font/anakotmai_light"
                    android:textColor="@color/Black"
                    android:layout_height="wrap_content"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="330dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/linear1"
                android:id="@+id/linear2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/imputtextbox"
                android:layout_height="47dp">
                <ImageView
                    android:layout_marginTop="1dp"
                    android:layout_width="30dp"
                    android:paddingLeft="9dp"
                    android:layout_marginLeft="17dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user"/>
                <EditText
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="8dp"
                    android:hint="นามสกุล"
                    android:id="@+id/surnameedit"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:inputType="text"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/anakotmai_light"
                    android:textColor="@color/Black"
                    android:layout_height="wrap_content"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="330dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/linear2"
                android:id="@+id/linear3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/imputtextbox"
                android:layout_height="47dp">
                <ImageView
                    android:layout_marginTop="1dp"
                    android:layout_width="30dp"
                    android:paddingLeft="9dp"
                    android:layout_marginLeft="17dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:src="@drawable/birthday"/>
                <TextView
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="8dp"
                    android:hint="วันเกิด"
                    android:id="@+id/dateedit"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:inputType="date"
                    android:fontFamily="@font/anakotmai_light"
                    android:textColor="@color/Black"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/linear3"
                android:layout_width="330dp"
                android:orientation="horizontal"
                android:id="@+id/linear4"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:weightSum="3"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="30dp"
                    android:layout_weight="1"
                    android:layout_height="47dp"
                    android:id="@+id/butedit1"
                    android:textSize="20dp"
                    android:fontFamily="@font/anakotmai"
                    android:textColor="@color/White"
                    android:layout_margin="9dp"
                    android:background="@drawable/buttonround"
                    android:text="ชาย"
                    android:layout_below="@id/linear3"/>
                <Button
                    android:layout_width="30dp"
                    android:layout_height="47dp"
                    android:layout_toRightOf="@+id/buttest1"
                    android:id="@+id/butedit2"
                    android:textColor="@color/Grey"
                    android:fontFamily="@font/anakotmai"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:layout_margin="9dp"
                    android:background="@drawable/buttonround2"
                    android:text="หญิง"
                    android:layout_below="@id/linear3"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:textColor="@color/Grey"
                    android:layout_height="47dp"
                    android:layout_margin="9dp"
                    android:fontFamily="@font/anakotmai"
                    android:background="@drawable/buttonround2"
                    android:id="@+id/butedit3"
                    android:layout_toRightOf="@+id/buttest2"
                    android:text="LGBT"
                    android:textSize="20dp"
                    android:layout_below="@id/linear3"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearsignin"
                android:layout_width="330dp"
                android:layout_marginLeft="10dp"

                android:layout_marginRight="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/linear4"
                android:background="@drawable/imputtextbox"
                android:layout_height="47dp">

                <Button
                    android:id="@+id/savebut"

                    android:layout_width="match_parent"
                    android:fontFamily="@font/anakotmai_light"
                    android:textSize="28dp"
                    android:textColor="@color/White"
                    android:layout_height="match_parent"
                    android:text="บันทึก"
                    android:textAllCaps="false"
                    android:background="@drawable/buttonround"
                    />


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

