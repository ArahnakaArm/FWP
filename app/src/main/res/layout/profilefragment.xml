<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusableInTouchMode="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear4barprofile"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/linearbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="?attr/colorPrimary"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="124dp"
                        android:layout_height="35dp"

                        android:layout_gravity="center"
                        android:src="@drawable/logoparty" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">


                    </RelativeLayout>
                    />

                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topictxt"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/kanit_light"
        android:text="เข้าสู่ระบบ"
        android:textColor="@color/Grey"
        android:textSize="28dp" />
    <LinearLayout
        android:layout_width="330dp"
        android:id="@+id/emaillinear"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_centerHorizontal="true"
      android:layout_below="@+id/topictxt"
        android:layout_marginTop="20dp"
        android:background="@drawable/imputtextbox"
        android:layout_height="47dp">
        <ImageView
            android:layout_marginTop="1dp"
            android:layout_width="30dp"
            android:paddingLeft="9dp"
            android:layout_marginLeft="17dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:src="@drawable/mail"/>
        <EditText
            android:background="@null"
            android:layout_width="330dp"
            android:layout_marginLeft="8dp"
            android:hint="อีเมล์"
            android:id="@+id/emailinput"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"

            android:fontFamily="@font/kanit_light"
            android:textColor="@color/Grey"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="330dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/emaillinear"
        android:id="@+id/passlinear"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

    android:background="@drawable/imputtextbox"
    android:layout_height="47dp">
    <ImageView
        android:layout_marginTop="1dp"
        android:layout_width="30dp"
        android:paddingLeft="9dp"
        android:layout_marginLeft="17dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:src="@drawable/key"/>
    <EditText
        android:background="@null"
        android:layout_width="330dp"
        android:layout_marginLeft="8dp"
        android:hint="รหัสผ่าน"
        android:id="@+id/passwordinput"
        android:layout_gravity="center_vertical"
        android:textSize="20dp"

        android:fontFamily="@font/kanit_light"
        android:textColor="@color/Grey"
        android:layout_height="wrap_content"
        />


</LinearLayout>
    <LinearLayout
        android:id="@+id/linearsignin"
        android:layout_width="330dp"
        android:layout_below="@+id/passlinear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/imputtextbox"
        android:layout_height="47dp">

       <Button
           android:id="@+id/signinbut"

           android:layout_width="match_parent"
           android:fontFamily="@font/kanit_light"
           android:textSize="28dp"
           android:textColor="@color/White"
           android:layout_height="match_parent"
           android:text="เข้าสู่ระบบ"
           android:textAllCaps="false"
           android:background="@drawable/buttonround"
           />


    </LinearLayout>
<LinearLayout
    android:id="@+id/chooseoption"
    android:layout_below="@+id/linearsignin"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:weightSum="2"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_weight="1"
        android:id="@+id/forgotingbutton"
        android:textSize="18dp"
        android:fontFamily="@font/kanit_light"
        android:textAlignment="center"
        android:textColor="@color/Grey"
        android:text="ลืมรหัสผ่าน ?"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/createacc"
       android:layout_marginRight="0dp"
        android:fontFamily="@font/kanit_light"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textColor="@color/Primary2"
        android:text="สร้างบัญชีผู้ใช้"/>
</LinearLayout>
<LinearLayout
    android:id="@+id/stick"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/chooseoption"
    android:layout_width="330dp"
    android:background="@drawable/imputtextbox"
    android:layout_centerHorizontal="true"
    android:layout_height="3dp">

</LinearLayout>

    <TextView
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:layout_width="330dp"
        android:textColor="@color/Grey"
        android:layout_height="wrap_content"
        android:text="หรือ เข้าสู่ระบบด้วย"
        android:fontFamily="@font/kanit"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:id="@+id/textchoose"
        android:layout_below="@+id/stick"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@id/textchoose"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="2"
        >
        <Button
            android:text="เข้าสู่ระบบ"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:id="@+id/facebooksignin"
            android:drawablePadding="-15dp"
            android:drawableStart="@drawable/facebookresize"
            android:textAllCaps="false"
            android:fontFamily="@font/kanit_light"
            android:textColor="@color/Grey"
            android:layout_width="10dp"

            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:layout_height="47dp"
            android:background="@drawable/imputtextbox"/>
        <Button
            android:drawableStart="@drawable/googleresize"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:id="@+id/googlesignin"
            android:drawablePadding="-15dp"
            android:textAllCaps="false"
            android:fontFamily="@font/kanit_light"
            android:textColor="@color/Grey"
            android:textSize="20dp"
            android:text="เข้าสู่ระบบ"
            android:layout_marginLeft="5dp"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:layout_height="47dp"
            android:background="@drawable/imputtextbox"/>

    </LinearLayout>

    </RelativeLayout>
</ScrollView>
</RelativeLayout>