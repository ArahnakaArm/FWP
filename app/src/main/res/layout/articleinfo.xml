<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear4bar"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/linearbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="?attr/colorPrimary"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="124dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/logoparty" />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/backarrow"
                        android:layout_width="33dp"
                        android:layout_height="31dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/backarrow" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">


                    </RelativeLayout>
                    />

                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:translationZ="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/bookmarkbutton"
                        android:layout_width="35dp"
                        android:layout_marginEnd="5dp"
                        android:layout_height="35dp"
                        android:src="@drawable/bookmark2"/>
                        <ImageView
                            android:id="@+id/bookmarkbuttonorange"
                            android:layout_width="35dp"
                            android:layout_marginEnd="5dp"
                            android:visibility="invisible"
                            android:layout_height="35dp"
                            android:src="@drawable/bookmarkorange"/>
                    </RelativeLayout>



                </LinearLayout>
                <ImageView
                    android:src="@drawable/logo"
                    android:scaleType="center"
                    android:layout_width="match_parent"
                    android:id="@+id/imageinfo"
                    android:layout_height="200dp" />
                    <TextView
                        android:id="@+id/topicinfo"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="18dp"
                        android:justificationMode="inter_word"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageinfo"
                        android:fontFamily="@font/anakotmai"
                        android:textColor="@color/Primary2"
                       />
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/topicinfo"
                    android:id="@+id/viewLinear"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_marginLeft="5pt"
                        android:layout_height="20dp"
                        android:src="@drawable/view"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ผู้เข้าชม"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/battleshipgrey"
                        android:textSize="11dp"
                        android:fontFamily="@font/anakotmai_light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/viewValue"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/battleshipgrey"
                        android:textSize="11dp"
                        android:fontFamily="@font/anakotmai_light"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/shareValue"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/battleshipgrey"
                        android:textSize="11dp"
                        android:fontFamily="@font/anakotmai_light"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/topicinfo"
                    android:id="@+id/dategallery"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="70dp"
                        app:layout_widthPercent="17%"
                        android:elevation="0dp"
                        android:padding="1dp"
                        android:textColor="@color/White"
                        android:translationZ="3dp"
                        android:id="@+id/gallery"
                        android:textAlignment="center"
                        android:background="@color/backgroundgreydark"
                        android:textSize="12dp"
                        android:fontFamily="@font/anakotmai"

                        android:layout_height="wrap_content"
                        android:text="Category"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/timeresize"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dateContent"
                        android:paddingRight="20dp"
                        android:text="Date"/>

                </LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="330dp"
    android:layout_height="2dp"
    android:id="@+id/bar"
    android:layout_centerHorizontal="true"
    android:background="@color/backgroundgrey"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/dategallery"></LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_below="@id/bar"

                    android:overScrollMode="never"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/list_recycler_view_article">

                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>

