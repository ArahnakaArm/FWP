<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:translationZ="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/bookmarkbutton"
                        android:layout_width="35dp"
                        android:layout_marginEnd="5dp"
                        android:layout_height="35dp"
                        android:src="@drawable/bookmark2"/>
                    <ImageView
                        android:id="@+id/sharebuttoninfo"
                        android:layout_width="35dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="35dp"
                        android:src="@drawable/share2"/>


                </LinearLayout>
                <ImageView
                    android:background="@drawable/logo"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:id="@+id/imageinfo"
                    android:layout_height="200dp" />
                    <TextView
                        android:id="@+id/topicinfo"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:textSize="18dp"
                        android:justificationMode="inter_word"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageinfo"

                        android:fontFamily="@font/anakotmai"
                        android:textColor="@color/Primary2"
                        android:text="'ธนาธน' ชี้ปัญหา รัฐราชการรวมศูนย์ ทำประเทศไม่พัตนา"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/topicinfo"
                    android:id="@+id/dategallery"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="70dp"
                        app:layout_widthPercent="17%"
                        android:elevation="0dp"
                        android:padding="1dp"
                        android:textColor="@color/White"
                        android:translationZ="3dp"
                        android:id="@+id/gallery"
                        android:textAlignment="center"
                        android:background="@color/backgroundgreydark"
                        android:textSize="12dp"
                        android:fontFamily="@font/anakotmai"

                        android:layout_height="wrap_content"
                        android:text="Category"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/timeresize"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dateContent"
                        android:paddingRight="20dp"
                        android:text="Date"/>

                </LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="330dp"
    android:layout_height="2dp"
    android:id="@+id/bar"
    android:layout_centerHorizontal="true"
    android:background="@color/backgroundgrey"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/dategallery"></LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_below="@id/bar"

                    android:id="@+id/list_recycler_view_article">

                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>

